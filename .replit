modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.address=0.0.0.0 --server.port=8080"]
deploymentTarget = "cloudrun"

[languages]
python = "3.11"

[env]
PYTHONPATH = "${PYTHONPATH}:${workspaceDir}"

# Keep a single port configuration
[[ports]]
localPort = 8080
externalPort = 80